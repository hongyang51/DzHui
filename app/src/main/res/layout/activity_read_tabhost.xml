<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@android:id/tabs">

                <FrameLayout
                    android:id="@+id/tabhost_frameLayout_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>

                <FrameLayout
                    android:id="@+id/tabhost_frameLayout_news"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>

                <FrameLayout
                    android:id="@+id/tabhost_frameLayout_happy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>

                <FrameLayout
                    android:id="@+id/tabhost_frameLayout_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>


            </FrameLayout>


        </RelativeLayout>


    </TabHost>
</LinearLayout>